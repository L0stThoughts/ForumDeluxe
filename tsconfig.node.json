{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "vite.config.ts", // Add vite.config.ts
    "src/**/*.ts",
    "src/**/*.jsx",
    "src/**/*.tsx",
    "src/**/*.scss",
    "src/**/*.json",
    "src/**/*.html", // Include HTML files if necessary
    "src/**/*.css",  // Include CSS files if necessary
    "src/**/*.svg",  // Include SVG files if necessary
    "src/**/*.png",  // Include image files if necessary
    "src/**/*.jpg",  // Include image files if necessary
    "src/**/*.gif",  // Include image files if necessary
    "src/**/*.html"  // Add this line
  ]
}
